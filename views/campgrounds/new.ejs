<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center; margin-bottom: 30px">Create a New Campground </h1>
        <div style ="width: 30%; margin: 0 auto;">
            <form action = "/campgrounds" method = "post">
                <div class="form-group">
                    <input class= "form-control" type = "text" placeholder= "name" name= "name">
                </div>
                <div class="form-group">
                    <input class= "form-control" type = "text" placeholder= "image url" name="image">
                </div>
                
                <div class="form-group">
                    <input class= "form-control" type = "text" placeholder= "description" name="description">
                </div>
                <div class="form-group">
                    <input class= "form-control" type = "text" placeholder= "price (optional) or enter 'FREE'" name= "price">
                    <!--// if I wanted to require a number for price, could use this line instead:-->
                    <!--<input class= "form-control" type = "number" min="0.01" step= "0.01" placeholder= "price" name= "price">-->
                </div>
                <div class="form-group">
                    <label for="location">Locations</label>
                    <input class="form-control" type="text" name="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <button class= "btn-primary btn btn-lg btn-default btn-block">Submit!</button>
                </div>
            </form>
            <a href= "/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>